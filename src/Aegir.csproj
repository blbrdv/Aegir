<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net46</TargetFramework>
    <AssemblyName>Aegir</AssemblyName>
    <Description>Simple mod for disabling water camera clipping</Description>
    <Version>0.1.0</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <!-- CHANGE to your Steam library path -->
    <!-- e.g. "C:\Program Files (x86)\Steam\steamapps\common\Valheim" -->
    <SteamPath>...</SteamPath>
  </PropertyGroup>

  <Target Name="PreResolveClean" BeforeTargets="BeforeResolveReferences">
    <CallTarget Targets="Clean" />
    <Message Text="Build directories cleaned" Importance="high" />
  </Target>

  <Target 
      Name="CreateArchiveAfterBuild" 
      BeforeTargets="AfterBuild" 
      Condition=" '$(Configuration)' == 'Release' ">
    <Exec Command="dotnet fsi ..\scripts\pack.fsx $(AssemblyName)-$(Version)" />
    <Message Text="Pack complete" Importance="high" />
  </Target>

  <ItemGroup>
    <PackageReference Include="BepInEx.Analyzers" Version="1.*" PrivateAssets="all" />
    <PackageReference Include="BepInEx.Core" Version="5.*" />
    <PackageReference Include="BepInEx.PluginInfoProps" Version="1.*" />
    <PackageReference Include="Lib.Harmony" Version="2.2.2" />
    <PackageReference Include="UnityEngine.Modules" Version="2020.3.45" IncludeAssets="compile" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' == 'net'">
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="$(SteamPath)\valheim_Data\Managed\*.dll" />
  </ItemGroup>

</Project>
